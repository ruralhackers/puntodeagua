{
  "name": "ey-monorepo-boilerplate",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "concurrently -k --prefix-colors 'red,green,blue,yellow' --names 'admin,app' --prefix '[{name}]' 'bun run admin' 'bun run app'",
    "admin": "bun run --elide-lines=100 -F admin dev --port 3000",
    "app": "bun run --elide-lines=100 -F app dev --port 3001",
    "dbs": "docker-compose -f docker-compose.yml up -d",
    "db:sync": "bun run -F @ph/database db:sync",
    "format": "bunx biome format --write .",
    "check": "biome check .",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write --max-diagnostics=20000 .",
    "check:errors": "bunx biome check --max-diagnostics=20000 --diagnostic-level=error ."
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {}
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
