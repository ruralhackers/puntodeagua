{
  "name": "puntodeagua",
  "module": "index.ts",
  "type": "module",
  "private": false,
  "license": "AGPL-3.0",
  "scripts": {
    "start": "concurrently -k --prefix-colors 'red,green,blue,yellow' --names 'admin,webapp' --prefix '[{name}]' 'bun run admin' 'bun run webapp'",
    "webapp": "bun run -F webapp dev --port 3000",
    "dbs": "docker-compose -f docker-compose.yml up -d",
    "db:sync": "bun run -F @pta/database db:sync",
    "format": "bunx biome format --write .",
    "check": "bun x biome format --write  && bun x biome ci --diagnostic-level=error",
    "check:unsafe": "biome check --write --unsafe .",
    "check:write": "biome check --write --max-diagnostics=20000 .",
    "check:errors": "bunx biome check --max-diagnostics=20000 --diagnostic-level=error ."
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "catalog": {
      "zod": "3.24.2"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "latest",
    "concurrently": "^9.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
